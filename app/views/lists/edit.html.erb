<h1>編集機能</h1>

  <%= form_with model: @list, url:update_list_path(@list.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <h4>画像</h4>
  <% if @list.image.attached? %>
    <%= image_tag @list.image %>
  <% else %>
    <%= image_tag 'no_image',size: "300x300" %>
  <% end %>

  <%= f.submit '保存' %>

<% end %>