<h1>編集機能</h1>

<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
    <li><%= message %><li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @list, url:list_path(@list.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <h4>画像</h4>
  <% if @list.image.attached? %>
    <%= image_tag @list.image %>
  <% else %>
    <%= image_tag 'no_image',size: "300x300" %>
  <% end %>

  <%= f.submit '保存' %>

<% end %>